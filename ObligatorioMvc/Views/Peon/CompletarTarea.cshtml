@model Dominio.Tarea
@if (Context.Session.GetString("TipoEmp") == "Capataz")
{
    <div>
        <p>
            <i style="color:red" class="fa-solid fa-circle-xmark">No tienes el Rol necesario</i>
        </p>
    </div>
}
else if (Context.Session.GetString("TipoEmp") == null)
{
    <p>
        <i style="color:red" class="fa-solid fa-circle-xmark">Debe iniciar sesion</i>
    </p>
}
else{
<h2>Completar Tarea</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="_comentarioPeon" class="control-label">Comentario de Cierre</label>
        <textarea asp-for="_comentarioPeon" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <input type="submit" value="Completar Tarea" class="btn btn-primary" />
</form>
         <p>@ViewBag.msgOk</p>
        <p>@ViewBag.msgError</p>
}